{
  "name": "@tsers/dom",
  "version": "3.0.0",
  "description": "TSERSful DOM driver",
  "author": "Matti Lankinen <m.lankinen@iki.fi> (https://github.com/milankinen)",
  "license": "MIT",
  "main": "dist/tsers.dom.js",
  "esnext:main": "src/index.js",
  "homepage": "https://github.com/tsers-js/tsers/tree/master/dom",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsers-js/tsers.git"
  },
  "keywords": [
    "tsers",
    "cycle.js"
  ],
  "scripts": {
    "update": "npm run update:binaries && npm run update:modules",
    "update:modules": "../../node_modules/.bin/ncu -e 2 -u -a --packageFile ./package.json",
    "update:binaries": "rm -f .bin && ln -s ../../node_modules/.bin .bin",
    "test": "npm run lint && npm run mocha:all",
    "lint": ".bin/eslint -c ../../.eslintrc src/** test/**",
    "mocha:all": "npm run mocha -- --recursive test",
    "mocha": ".bin/mocha --opts ../../mocha.opts",
    "build:umd": "NODE_PATH=../../node_modules .bin/rollup -c",
    "build:minify": ".bin/uglifyjs dist/tsers.dom.js -o dist/tsers.dom.min.js",
    "build": "npm run build:umd && npm run build:minify",
    "prebuild": ".bin/rimraf dist && mkdir -p dist",
    "test:ci": ".bin/nyc npm t",
    "report:ci": ".bin/nyc report --reporter=lcov"
  },
  "devDependencies": {
    "should": "^11.1.0"
  },
  "nyc": {
    "extension": [ ".js" ],
    "include": [ "src/*.js" ]
  }
}
