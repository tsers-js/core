{
  "name": "@tsers/{{name}}",
  "version": "{{version}}",
  "description": "{{description}}",
  "author": "Matti Lankinen <m.lankinen@iki.fi> (https://github.com/milankinen)",
  "license": "MIT",
  "main": "dist/tsers.{{name}}.js",
  "esnext:main": "lib/index.js",
  "homepage": "https://github.com/tsers-js/tsers/tree/master/{{name}}",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsers-js/tsers.git"
  },
  "keywords": [
    "tsers",
    "cycle.js"
  ],
  "scripts": {
    "update": "../../node_modules/.bin/ncu -e 2 -u -a --packageFile ./package.json",
    "preinstall": "rm -f .bin && ln -s ../../node_modules/.bin .bin",
    "pretest": "npm run typings",
    "test": "npm run lint && npm run mocha:all",
    "lint": ".bin/tslint -c ../../tslint.json src/*.ts src/**/*.ts",
    "typings": ".bin/typings install",
    "mocha:all": "npm run mocha -- --recursive test",
    "mocha": ".bin/mocha --compilers ts:../../node_modules/espower-typescript/guess -r ../../node_modules/ts-node/register",
    "build:es2015": ".bin/tsc --p ./tsconfig.json",
    "build:umd": "NODE_PATH=../../node_modules .bin/rollup -c",
    "build:minify": ".bin/uglifyjs dist/tsers.{{name}}.js -o dist/tsers.{{name}}.min.js",
    "build": "npm run build:es2015 && npm run build:umd && npm run build:minify",
    "prebuild": ".bin/rimraf lib dist && mkdir -p dist lib && npm run typings",
    "test:ci": ".bin/nyc npm t",
    "report:ci": ".bin/nyc report --reporter=lcov"
  },
  "devDependencies": {
    "power-assert": "^1.4.1"
  },
  "nyc": {
    "extension": [ ".ts" ],
    "include": [ "src/*.ts" ]
  }
}
